            {{#if error}}
                <p style="color: red; margin-top: 1rem;">{{error}}</p>
            {{/if}}
            <div class="col">
                <input name="nombre" type="text" class="form-control email-input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nombre" autocomplete="on" required>
            </div>
            <div class="col">
                <input name="correo" type="email" class="form-control pass-input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Correo electronico" autocomplete="on" required>
            </div>
            <div class="col">
                <input name="contrasena" type="password" class="form-control pass-input" id="exampleInputPassword1" placeholder="ContraseÃ±a" autocomplete="current-password" required>
            </div>
            <button type="submit" class="btn btn-primary btn-login col-12">Registrarse</button>
        </form>
    </div>
</body>
</html>